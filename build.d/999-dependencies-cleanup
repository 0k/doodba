#!/usr/bin/env python
# Copyright 2017 LasLabs Inc.

import os

from odoobaselib import CUSTOM_DIR, FILE_APT_BUILD
from odoobaselib.installer import CLEANERS, Installer


# Build-time dependencies must be removed when finishing build
if os.path.isfile(FILE_APT_BUILD):
    installer = Installer('apt', FILE_APT_BUILD)
    installer.remove()
    installer.cleanup()


# Clean up garbage generated by respective package managers
for name in CLEANERS:
    req_file = os.path.join(
        CUSTOM_DIR, 'dependencies', '%s.txt' % name,
    )
    if os.path.isfile(req_file):
        Installer(name, req_file).cleanup()
